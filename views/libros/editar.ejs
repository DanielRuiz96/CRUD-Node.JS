<%- include ../layouts/cabecera.ejs %> 
    <br/>
    <div class="card">
        <div class="card-header">
            Formulario de Captura
        </div>
        <div class="card-body">
            <h4 class="card-title">Editar datos de libro</h4>
            <p class="card-text">
                <form method="post" action="../actualizar/" enctype="multipart/form-data">
        
                    <input type="hidden" name="id" value="<%=libro.id %> ">
                    <div class="form-group">
                        <label for="my-input">Nombre</label>
                        <input type="text" name="nombre" id="my-input" class="form-control" value="<%= libro.nombre %> ">      
                    </div>
                    <br/>
                    <div class="form-group">
                        <label for="my-input">Imagen</label>
                        <img class="img-thumbnail" src="../../images/<%= libro.imagen %>" width="100">
                        <input type="file" class="form-control-file" name="archivo" id="my-input">
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-success">Actualizar</button>
                    <a class="btn btn-primary" href="/libros">Cancelar</a>
                </form>
            </p>
        </div>
    </div>
    
